<% provide(:title, "NPC Shifts for #{@character.name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="character info">
      <h1><%= link_to @character.name, character_path(@character) %></h1>
    </section>
    <section class="shift info">
      <%= link_to 'Open New Shift', new_npc_shift_path, class: "btn btn-sm btn-success" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @npc_shifts.any? %>
      <h3>Total NPC Shifts (<%= @npc_shifts.count %>)</h3>
      <table class="table table-condensed table-hover table-responsive">
        <tr>
          <th>Starting Time</th>
          <th>Shift Length</th>
          <th>Net Pay If Ended Now</th>
          <th/>
        </tr>
        <%= render @npc_shifts.open %>
        <tr>
          <th>Starting Time</th>
          <th>Ending Time</th>
          <th>Amount Paid</th>
        </tr>
        <%= render @npc_shifts.recently_closed %>
      </table>
    <% end %>
  </div>
</div>