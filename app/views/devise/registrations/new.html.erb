<h2>
  Sign Up or Log In
  <br/>
  <small class="text-muted">We couldn't match your Facebook account to a SimRep user.</small>
</h2>

<hr/>

<div class="row justify-content-around">
  <div class="col-5">
    <p class="text-center">If this is your first time using SimRep, this is normal! Please verify the information provided by Facebook.</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'new_user' }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true %>
      <%= f.input :name, label: "Player Name" %>
      <%= f.button :submit, "Sign up" %>
    <% end %>
  </div>
  <div class="col-5">
    <p class="text-center">If you have previously used SimRep, please log in with your email/password combination to associate your Facebook account.</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'old_user' }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true %>
      <%= f.input :password, hint: raw("#{link_to 'Forgot your password?', new_password_path(resource_name)}") %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Bastion", class: "btn btn-primary" %>
      <%= f.button :submit, "Holurheim", class: "btn btn-warning" %>
      <%= f.button :submit, "Aquia", disabled: true, class: "btn btn-default" %>
      <%= f.button :submit, "Last Rest", disabled: true, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
