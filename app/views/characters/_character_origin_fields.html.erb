<tr class="row col-12 nested-fields no-border">
  <%= f.simple_fields_for :origin do |f_origin| %>
    <td class="col-3"><%= f_origin.input :source, collection: Origin::SOURCES, label: false %></td>
    <td class="col-3"><%= f_origin.input :name, collection: Origin::SAMPLE, label: false %></td>
    <td class="col-4"><%= f_origin.input :detail, label: false %></td>
    <% if f_origin.object.new_record? %>
    <td class="col-2"><%= link_to_remove_association "Remove Origin", f, class: "btn btn-danger"%></td>
    <% end %>
  <% end %>
</tr>
