<% provide(:title, "#{current_user.name}'s Characters") %>
<div class="row justify-content-around">
  <aside class="col-4">
    <section class="user_info">
      <%= link_to 'Create New Character', new_character_path, class: "btn btn-block btn-primary" %>
    </section>
  </aside>
  <div class="col-6">
    <% if @active_characters.present? %>
      <h3>Active Characters (<%= @active_characters.count %>)</h3>
      <ul class="characters">
        <%= render @active_characters %>
      </ul>
    <% end %>
    <% if @retired_characters.present? %>
      <hr/>
      <h3>Retired Characters (<%= @retired_characters.count %>)</h3>
      <ul class="characters">
        <%= render @retired_characters %>
      </ul>
    <% end %>
  </div>
</div>