<div id="eventsModal" class="modal fade" role="dialog" aria-labelledby="eventsModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title">Experience Record</h4>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <h4>Event Record</h5>
              <table class="table table-condensed table-hover table-responsive">
                <thead>
                  <tr>
                    <th>Campaign</th>
                    <th>Weekend</th>
                    <th>XP for Attendance</th>
                    <th>XP for Cleaning</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @character.events.newest %>
                </tbody>
              </table>
              <% if @character.bonus_experiences.present? %>
              <hr/>
                <h4>Bonus Experience</h5>
                <table class="table table-condensed table-hover table-responsive">
                  <thead>
                    <tr>
                      <th>Reason</th>
                      <th>Amount</th>
                      <th>Date Awarded</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @character.bonus_experiences.newest %>
                  </tbody>
                </table>
              <% end %>
            </div>
          </div>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->