<div id="eventsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="eventsModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Experience Record</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row col-12">
              <h5>Event Record</h5>
              <table class="table table-condensed table-hover sortable-theme-bootstrap" data-sortable>
                <thead>
                  <tr class="row col-12">
                    <th class="col-3">Campaign</th>
                    <th class="col-3">Weekend</th>
                    <th class="col-3">Attendance XP</th>
                    <th class="col-3">Cleaning XP</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @character.events.newest %>
                </tbody>
              </table>
            </div>
            <% if @character.bonus_experiences.present? %>
            <div class="row col-12">
              <br/>
              <h5>Bonus Experience</h5>
              <table class="table table-condensed table-hover sortable-theme-bootstrap" data-sortable>
                <thead>
                  <tr class="row col-12">
                    <th class="col-5">Reason</th>
                    <th class="col-3">Amount</th>
                    <th class="col-4">Date Awarded</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @character.bonus_experiences.newest %>
                </tbody>
              </table>
            </div>
            <% end %>
          </div>
        </div><!-- /.modal-body -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->