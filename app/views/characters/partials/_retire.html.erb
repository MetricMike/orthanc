<div id="retireModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="retireModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Retire <%= "#{@character.name}" %>?</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul class="nav flex-column">
            <div class="row justify-content-around">
              <li class="col-5 p-2 nav-item">
                <%= button_to "Standard", character_path(@character), params: { type: :standard }, method: :delete, class: 'btn btn-primary nav-link' %>
              </li>
              <li class="col-5 p-2 nav-item">
                <%= button_to "Legacy", character_path(@character), params: { type: :legacy }, method: :delete, class: 'btn btn-warning nav-link' %>
              </li>
            </div>
          </ul>
        </div><!-- /.modal-body -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->