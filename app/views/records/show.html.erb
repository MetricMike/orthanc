<% provide(:title, @user.email) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.characters.any? %>
      <h3>Characters (<%= @user.characters.count %>)</h3>
      <ul class="characters">
        <%= render @characters %>
      </ul>
    <% end %>
  </div>
</div>